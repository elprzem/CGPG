<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oa.cgpg.OpinionsFragment">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeListView"
            android:layout_alignParentTop="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/typeListView"
            android:id="@+id/free_space1"/>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commList"
            android:cacheColorHint="#00000000"
            android:layout_above="@+id/newOpinion"
            android:layout_below="@id/free_space1"
            android:divider="@drawable/list_divider" android:dividerHeight="10px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        </ListView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj opiniÄ™"
            android:background="@drawable/bottom_button"
            android:id="@+id/newOpinion"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffffff" />


    </RelativeLayout>

</FrameLayout>
